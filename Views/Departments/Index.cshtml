@model IEnumerable<SalesWebMvc.Models.Department>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a class="" asp-action="Create">Create New</a>
</p>
<table class="table w-100 border-0 rounded-0">
    <thead class="bg-gradient mb-3 border-0 mb-2 rounded-0">
        <tr class="px-6 py-3 bg-primary text-white font-weight-light border-0 rounded-0">
            <th class="bg-primary rounded-end border-0">
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th class="bg-primary rounded-start border-0"></th>
        </tr>
    </thead>
    <tbody class="w-full mt-3 border-0 mt-2 rounded-0">
        @foreach (var item in Model)
        {
                                        <tr class="w-100 text-info font-weight-light border-0 rounded-0">
                                        <td class="text-sm rounded-end bg-light border-0">
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                                <td class="text-sm rounded-start bg-light border-0">
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
