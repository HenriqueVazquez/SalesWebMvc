@model SalesWebMvc.Models.Department

@{
    ViewData["Title"] = "Edit";
}
<link href='https://css.gg/chevron-double-down-o.css' rel='stylesheet'>

<h1>Edit</h1>

<h4>Department</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary mt-2 oliva rounded-pill d-flex justify-content-center align-items-center ">                                               
                 <div class="d-flex d-inline-flex align-self-center h22">
                 <i class="gg-chevron-double-down-o"></i>
                 <p class="ms-2 h6">Save</p>
                 </div>
                </button>
            </div>
        </form>
    </div>
</div>

<div>
    <a class="oliva" asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
